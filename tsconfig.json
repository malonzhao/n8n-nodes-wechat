{
	"compilerOptions": {
		"baseUrl": "./",
		"strict": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2019",
		"lib": ["es2019", "es2020", "es2022.error", "dom"],
		"removeComments": true,
		"useUnknownInCatchVariables": false,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"strictNullChecks": true,
		"preserveConstEnums": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"incremental": true,
		"declaration": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"outDir": "./dist/",
		"paths": {
			"@credentials/*": ["credentials/*"],
			"@nodes/*": ["nodes/*"],
			"@utils/*": ["utils/*"]
		}
	},
	"include": [
		"credentials/*",
		"nodes/**/*",
		"nodes/**/*.json",
		"utils/*",
		"package.json"
	],
	"exclude": [
		"./**/*.test.ts"
	]
}
